{% extends 'base.html.twig' %}

{% block title %}Option index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Option index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                <td>
                    <a  class="btn btn-primary" href="{{ path('option_edit', {'id': option.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('option_new') }}" class="btn btn-primary">Create new</a>
    <a class="btn btn-light" href="{{ path('admin.property.index') }}">Back</a>

</div>
{% endblock %}
