<div class="card mb-4">
  <img src="{{ '/images/properties/300.png' }}">
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        {{ property.title }}
      </a>
    </h5>
    <p class="card-text">{{ property.surface }}m2 - {{ property.description | nl2br }}</p>
    <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
    <div class="text-primary" style="font-size:2rem;">
        {{ property.formatedPrice }} $
    </div>
  </div>
</div>